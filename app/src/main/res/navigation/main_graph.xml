<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainGraph"
    app:startDestination="@id/newsFragment"
    >
    <fragment
        android:id="@+id/newsFragment"
        android:name="ru.sergeykamyshov.rostovtransport.presentation.news.list.NewsFragment"
        android:label="NewsFragment"
        >
        <action
            android:id="@+id/action_newsFragment_to_postActivity"
            app:destination="@id/postActivity"
            />
    </fragment>
    <activity
        android:id="@+id/postActivity"
        android:name="ru.sergeykamyshov.rostovtransport.presentation.news.post.PostActivity"
        android:label="activity_post"
        tools:layout="@layout/activity_post"
        />
    <fragment
        android:id="@+id/complainFragment"
        android:name="ru.sergeykamyshov.rostovtransport.presentation.complain.ComplainFragment"
        android:label="ComplainFragment"
        />
    <navigation
        android:id="@+id/menuGraph"
        app:startDestination="@id/menuFragment"
        >
        <fragment
            android:id="@+id/menuFragment"
            android:name="ru.sergeykamyshov.rostovtransport.presentation.menu.MenuFragment"
            android:label="MenuFragment"
            >
            <action
                android:id="@+id/action_menuFragment_to_aboutFragment"
                app:destination="@id/aboutFragment"
                app:popUpTo="@+id/aboutFragment"
                app:popUpToInclusive="true"
                />
            <action
                android:id="@+id/action_menuFragment_to_transportCardFragment"
                app:destination="@id/transportCardFragment"
                app:popUpTo="@+id/transportCardFragment"
                app:popUpToInclusive="true"
                />
            <action
                android:id="@+id/action_menuFragment_to_helpFragment"
                app:destination="@id/helpFragment"
                app:popUpTo="@+id/helpFragment"
                app:popUpToInclusive="true"
                />
        </fragment>
        <fragment
            android:id="@+id/helpFragment"
            android:name="ru.sergeykamyshov.rostovtransport.presentation.help.HelpFragment"
            android:label="HelpFragment"
            />
        <fragment
            android:id="@+id/transportCardFragment"
            android:name="ru.sergeykamyshov.rostovtransport.presentation.card.TransportCardFragment"
            android:label="TransportCardFragment"
            >
            <action
                android:id="@+id/action_transportCardFragment_to_cardBuyMapActivity"
                app:destination="@id/cardBuyMapActivity"
                app:popUpTo="@+id/cardBuyMapActivity"
                app:popUpToInclusive="true"
                />
            <action
                android:id="@+id/action_transportCardFragment_to_cardDepositMapActivity"
                app:destination="@id/cardDepositMapActivity"
                app:popUpTo="@+id/cardDepositMapActivity"
                app:popUpToInclusive="true"
                />
        </fragment>
        <fragment
            android:id="@+id/aboutFragment"
            android:name="ru.sergeykamyshov.rostovtransport.presentation.about.AboutFragment"
            android:label="AboutFragment"
            />
        <activity
            android:id="@+id/cardBuyMapActivity"
            android:name="ru.sergeykamyshov.rostovtransport.presentation.card.buy.map.CardBuyMapActivity"
            android:label="CardBuyMapActivity"
            />
        <activity
            android:id="@+id/cardDepositMapActivity"
            android:name="ru.sergeykamyshov.rostovtransport.presentation.card.deposit.map.CardDepositMapActivity"
            android:label="CardDepositMapActivity"
            />
    </navigation>
    <fragment
        android:id="@+id/routesListFragment"
        android:name="ru.sergeykamyshov.rostovtransport.presentation.transport.RoutesListFragment"
        android:label="RoutesListFragment"
        />
</navigation>